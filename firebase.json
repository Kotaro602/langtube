{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "config.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/*",
        "function": "app"
       },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
